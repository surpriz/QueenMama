# =============================================================================
# Queen Mama - Production Environment Variables
# =============================================================================
# Copy this file to .env.prod and fill in the values
# Then run: docker compose -f docker-compose.prod.yml up -d
# =============================================================================

# =============================================================================
# Domain Configuration
# =============================================================================
# Your main domain (without www or https)
DOMAIN=queenmama.io

# Email for Let's Encrypt SSL certificates
ACME_EMAIL=admin@queenmama.io

# =============================================================================
# Traefik Dashboard (optional)
# =============================================================================
# Generate with: htpasswd -nB admin
# Format: user:password_hash
TRAEFIK_DASHBOARD_AUTH=admin:$$2y$$10$$example_hash_here

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_USER=queenmama
DB_PASSWORD=your_secure_password_here
DB_NAME=queenmama

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_min_32_characters_here
JWT_EXPIRES_IN=7d

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# =============================================================================
# Stripe (Payments)
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# Clerk (Authentication - optional, for future migration)
# =============================================================================
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key

# =============================================================================
# Resend (Email)
# =============================================================================
RESEND_API_KEY=re_your_resend_api_key

# =============================================================================
# Sentry (Error Tracking - optional)
# =============================================================================
SENTRY_DSN=https://your_sentry_dsn

# =============================================================================
# Docker Registry (for CI/CD)
# =============================================================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=your-org/queen-mama
VERSION=latest
